@using ToDoListLibrary
@model ToDoListLibrary.ToDoEntry

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DueDate" class="control-label"></label>
    <input asp-for="DueDate" class="form-control" />
    <span asp-validation-for="DueDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Completed" class="control-label"></label>
    <select asp-for="Completed" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
</div>
@{
    if (Model != null)
    {
        foreach (var item in Model?.Fields)
        {
            <div class="form-group">
                <input asp-for="@item.Name" class="control-label" />
                <input asp-for="@item.Value" class="form-control" />
            </div>
        }
        <div>
            <a class="btn btn-default btn-lg" asp-action="Create" asp-controller="Fields" asp-route-id="@Model.Id">
                <span class="bi bi-plus-square"></span>Add new fields
            </a>
        </div>
    }
}

<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>
